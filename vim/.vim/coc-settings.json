{
    "elixir.pathToElixirLS": "/usr/lib/elixir-ls/language_server.sh",
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ]
        }
    }
}
